CREATE TABLE products (
  id INT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY, 
  item TEXT NOT NULL,
  created_at TIMESTAMP NOT NULL default '0000-00-00 00:00:00',  
  updated_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP 
);


CREATE TABLE users (
  id INT UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY, 
  name TEXT NOT NULL,
  birthday DATETIME  NOT NULL,
  address TEXT NOT NULL,
  created_at TIMESTAMP NOT NULL default '0000-00-00 00:00:00',  
  updated_at TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP 
) COMMENT "Покупатели магазина";


CREATE TABLE orders (
  order_no INT NOT NULL AUTO_INCREMENT,
  user_name INT UNSIGNED NOT NULL COMMENT 'привязать id users',
  order_item INT UNSIGNED NOT NULL COMMENT 'id с products',
  order_date DATETIME NOT NULL,
  order_delivery DATETIME NOT NULL,
  PRIMARY KEY (`order_no`),
  FOREIGN KEY (`order_item`) REFERENCES products (`id`),
  FOREIGN KEY (`user_name`) REFERENCES users (`id`)
);

